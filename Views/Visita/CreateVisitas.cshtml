@model LaboratorioMarn.VISITA

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <input type="hidden" name="solicitud" value="@ViewBag.solicitud" />

        <div class="form-group">

            @Html.LabelFor(model => model.id_empleado, "Encargado", htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-7">
                @Html.DropDownListFor(model => model.id_empleado, (IEnumerable<SelectListItem>)ViewBag.EmpleadoSelection, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.id_empleado_entrega, "Entrega", htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-7">
                @Html.DropDownListFor(model => model.id_empleado_entrega, (IEnumerable<SelectListItem>)ViewBag.EmpleadoSelection, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_procedencia, "Procedencia", htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-7">
                @Html.DropDownListFor(model => model.id_procedencia, (IEnumerable<SelectListItem>)ViewBag.ProcedenciaSelection, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_tipo_muestra, "Tipo muestra", htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-7">
                @Html.DropDownListFor(model => model.id_tipo_muestra, (IEnumerable<SelectListItem>)ViewBag.MuestraSelection, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-4" for="id_sitio_muestreo">Sitio de muestreo</label>
            <div class="col-sm-7">
                @Html.DropDownList("id_sitio_muestreo", (IEnumerable<SelectListItem>)ViewBag.SitioMuestreoSelection, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_sitio_muestreo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="lat" class="control-label col-md-4">Latitud</label>
            <div class="col-md-7">
                <input type="text" class="form-control" name="lat">
            </div>
        </div>
        <div class="form-group">
            <label for="lng" class="control-label col-md-4">Longitud</label>
            <div class="col-md-7">
                <input type="text" class="form-control" name="lng">
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-sm-4" for="id_sitio_muestreo">Fecha muestreo</label>
            <div class="col-sm-7">
                @Html.EditorFor(model => model.fecha_visita, new { htmlAttributes = new { @class = "form-control", @id = "fechaVisita" } })
                @Html.ValidationMessageFor(model => model.fecha_visita, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-4" for="id_sitio_muestreo">Fecha recepción</label>
            <div class="col-sm-7">
                @Html.EditorFor(model => model.fecha_entrega, new { htmlAttributes = new { @class = "form-control", @id = "fechaEntrega" } })
                @Html.ValidationMessageFor(model => model.fecha_entrega, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="hora_entrega" class="control-label col-md-4">Hora de recepción</label>
            <div class="col-md-7">
                <input type="text" class="form-control" name="hora_entrega" id="horaEntrega" value="00:00">
            </div>
        </div>

        <div class="form-group">
            <label for="id" class="control-label col-md-4">Identificador de la Visita</label>
            <div class="col-md-7">
                @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label for="hora_visita" class="control-label col-md-4">Cantidad de muestras</label>
            <div class="col-md-7">
                <input type="text" class="form-control" name="cantidad_muestras">
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-11">
                <div class="col-md-8">
                    <div class="hide" id="alert">
                        <div class="alert alert-success" role="alert" id="alertMsg"></div>
                    </div>
                </div>
                <div class="col-md-4">
                    <input type="submit" value="Crear" class="btn btn-success btn-block" id="crearVisita" />
                </div>
            </div>
        </div>
    </div>
}
