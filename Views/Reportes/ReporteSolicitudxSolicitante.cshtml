@model   IEnumerable<LaboratorioMarn.Models.SolicitudxSolicitante>

@{
    ViewBag.Title = "Solicitudes";
}
<h1>Solicitudes</h1>
<p>
    @Html.ActionLink("Crear nueva solicitud", "Create", "Solicitud", new { Bandera = 1 }, null)
</p>
<table id="tablaSolicitante" class="table">
    <thead>
        <tr>
            <th># Solicitud</th>
            <th>
                Solicitante

            </th>
            <th>
                Estado
            </th>
            <th>
                Fecha de solicitud
            </th>
            <th>
                Fecha de muestreo
            </th>
            <th>
                Fecha de Inicio
            </th>
            <th>
                Fecha de finalización
            </th>

            <th>
                Analisis
            </th>
            <th>
                Areas
            </th>
            <th>
                Estado del Proceso
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.nombreSolicitante </td>
                <td>
                    @item.año
                </td>
                <td>
                    @item.nosolicitudes
                </td>
                <td>
                    @item.fecha_solicitud

                </td>
                <td>
                    @item.fecha_visita
                </td>
                <td>
                    @item.fecha_inicio
                </td>
                <td>
                    @item.fecha_finalizacion

                </td>
                <td>
                    @item.no_analisis
                </td>
                <td>
                    @item.noareas
                </td>

                <td>
                    @item.nombre_estado_proceso
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.id_solicitudes }) |
                    @Html.ActionLink("Borrar", "Delete", new { id = item.id_solicitudes })
                </td>
            </tr>
        }
    </tbody>
</table>
@*<input type="button" value="Create" onclick="location.href='@Url.Action("Create","Index")'" />*@

@section Scripts {
    <script type="text/javascript" src="https://cdn.datatables.net/select/1.1.2/js/dataTables.select.min.js"></script>
    <script type="text/javascript">
        var tablaSolicitante;
        $(function () {
            tablaSolicitante = $("#tablaSolicitante").DataTable({
                columnDefs: [
                    {
                        orderable: false,

                    },
                    {
                        targets: [0],
                        visible: true,
                        searchable: true
                    }
                ],
                select: {
                    style: 'os',
                    selector: 'td:first-child'
                },
            });
        })

    </script>
}

@section Styles {
    <link href="https://cdn.datatables.net/select/1.1.2/css/select.dataTables.min.css" rel="stylesheet" />

    <style type="text/css">
        table.dataTable thead {
            font-size: 0.85em;
        }

        table.dataTable tbody {
            font-size: 0.85em;
        }
    </style>
}

