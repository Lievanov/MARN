@model LaboratorioMarn.ALMACEN

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ALMACEN</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_almacen)

        <div class="form-group">
            @Html.Label("Estante: ", htmlAttributes: new { @class = "control-label col-xs-2"})
            <div class="col-xs-3">
                @Html.EditorFor(model => model.estante, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.estante, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Nivel: ", htmlAttributes: new { @class = "control-label col-xs-2"})
            <div class="col-xs-3">
                @Html.EditorFor(model => model.nivel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nivel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*<input type="submit" value="Save" class="btn btn-default" />*@
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
}


<div>
    @Html.ActionLink("Regresar a lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
