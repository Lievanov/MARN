@model LaboratorioMarn.SITIO_MUESTREO

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Sitio Muestreo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_sitio_muestreo)

        <div class="form-group">

            @Html.Label("Nombre sitio: ", htmlAttributes: new { @class = "control-label col-xs-2" })
            <div class="col-xs-3">
                @Html.EditorFor(model => model.nombre_sitio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre_sitio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            @Html.Label("Dirección sitio: ", htmlAttributes: new { @class = "control-label col-xs-2" })
            <div class="col-xs-3">
                @Html.EditorFor(model => model.direccion_sitio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.direccion_sitio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*<input type="submit" value="Save" class="btn btn-default" />*@
                <button type="submit" class="btn btn-primary">Editar</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>
