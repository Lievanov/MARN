@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    <ul class="nav navbar-nav navbar-right">
        <li class="notification-dropdown hidden-xs hidden-sm" >
            <a href="#" class="trigger" id="verNotificaciones">
                <i class="glyphicon-info-sign glyphicon"></i>
                <span class="count" id="countNotifications"></span>
            </a>
            <div class="pop-dialog">
                <div class="pointer right">
                    <div class="arrow"></div>
                    <div class="arrow_border"></div>
                </div>
                <div class="body">
                    <a href="#" class="close-icon"><i class="icon-remove-sign"></i></a>
                    <div class="messages" >
                        <div id="mensajesNotificaciones"></div>
                        <div class="footer">
                            <a href="@Url.Action("Index", "Notificacion")" class="logout">Ver todas las notificaciones</a>
                        </div>
                    </div>
                </div>
            </div>
        </li>
        <li>
            @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "EditProfile", "Admin", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>

        @Html.AntiForgeryToken()
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>

        <li>&nbsp;&nbsp;</li>
    </ul>
    }   
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
