@model  LaboratorioMarn.VISITA

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_visita)

        <input type="hidden" name="id_solicitud" value="@ViewBag.idSolicitud" />

        <div class="form-group">
            @Html.LabelFor(model => model.id_empleado, "Encargado", htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-7">
                @Html.DropDownList("id_empleado", (IEnumerable<SelectListItem>)ViewBag.EmpleadoSelection, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_empleado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_procedencia, "Procedencia", htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-7">
                @Html.DropDownList("id_procedencia", (IEnumerable<SelectListItem>)ViewBag.ProcedenciaSelection, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_procedencia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_tipo_muestra, "Tipo Muestra", htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-7">
                @Html.DropDownList("id_tipo_muestra", (IEnumerable<SelectListItem>)ViewBag.MuestraSelection, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_tipo_muestra, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <label class="control-label col-sm-4" for="id_sitio_muestreo">Fecha de visita</label>
            <div class="col-sm-7">
                @Html.EditorFor(model => model.fecha_visita, new { htmlAttributes = new { @class = "form-control", @id = "fechaVisita" } })
                @Html.ValidationMessageFor(model => model.fecha_visita, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-4" for="id_sitio_muestreo">Sitio de muestreo</label>
            <div class="col-sm-7">
                @Html.DropDownList("id_sitio_muestreo", (IEnumerable<SelectListItem>)ViewBag.SitioMuestreoSelection, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_sitio_muestreo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-11">
                <div class="col-md-8">
                    <div class="hide" id="alert">
                        <div class="alert alert-success" role="alert" id="alertMsg"></div>
                    </div>
                </div>
                <div class="col-md-4">
                    <input type="submit" value="Guardar" class="btn btn-success btn-block" id="guardarVisita" />
                </div>
            </div>
        </div>
    </div>

}