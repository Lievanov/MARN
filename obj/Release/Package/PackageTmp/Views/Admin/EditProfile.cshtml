@model LaboratorioMarn.Models.AppUser

@{
    EMPLEADO empleado = ViewBag.Empleado;
    ViewBag.Title = "Editar";
}

<h2>Editar Perfil</h2>


@using (Html.BeginForm("EditProfile","Admin", FormMethod.Post, htmlAttributes: new { @enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.Id)

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="nombre_empleado" class="control-label col-md-2">Nombre empleado</label>
            <div class="col-md-3">
                @Html.EditorFor(model => empleado.nombre_empleado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => empleado.nombre_empleado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="nombre_empleado" class="control-label col-md-2">Avatar</label>
            <div class="col-md-3">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-1">
                        <img src="@empleado.avatar" class="img-responsive img-circle" alt="No avatar" />
                    </div>
                </div>
                <br />
                <input type="file" name="file" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="telefono_empleado" class="control-label col-md-2">Teléfono empleado</label>
            <div class="col-md-3">
                @Html.EditorFor(model => empleado.telefono_empleado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => empleado.telefono_empleado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Usuario</label>
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Contraseña</label>
            <div class="col-md-3">
                <input name="password" type="password" class="form-control" />
            </div>
        </div>

        <div class="col-md-offset-3">
            <button type="submit" class="btn btn-primary">Guardar</button>
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
